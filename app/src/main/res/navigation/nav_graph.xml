<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_menu_posts">

    <fragment
        android:id="@+id/nav_menu_posts"
        android:name="com.github.motassemja.ufo.ui.fragments.PostsFragment"
        android:label="Posts"
        tools:layout="@layout/fragment_posts" />
    <fragment
        android:id="@+id/nav_menu_dashboard"
        android:name="com.github.motassemja.ufo.ui.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/frag_dashboard" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.github.motassemja.ufo.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/nav_menu_groups"
        android:name="com.github.motassemja.ufo.ui.fragments.GroupsFragment"
        android:label="Groups"
        tools:layout="@layout/fragment_groups" >
        <action
            android:id="@+id/action_nav_menu_groups_to_newGroupFragment"
            app:destination="@id/newGroupFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newGroupFragment"
        android:name="com.github.motassemja.ufo.ui.fragments.NewGroupFragment"
        android:label="Create New Group"
        tools:layout="@layout/fragment_new_group" />
</navigation>